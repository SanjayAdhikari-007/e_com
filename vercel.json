
{
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts", 
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**", "public/**", ".env", "log/**"] }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/app.ts" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.ts" } 
  ]
}